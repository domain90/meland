<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edita tu contenido</h1>
        <div style="width: 30%; margin: 30px auto;">
             <form method="POST" action="/<%= gag.id %>?_method=PUT" enctype="multipart/form-data"  style="width: 80%; margin: 30px auto;">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input class="form-control" type="text" name="title" value=<%= gag.title %>>
                </div>
                <div class="form-group" style="border: 1px solid #ccc; padding: 5px; border: inset 0 1px 1px rgba(0,0,0,.075); border-radius: 5px;">
                    <label for="">Suba su meme</label>
                    <input type="file" name="gag">
                </div>
                <h2 class="separator"><span>o</span></h2>
                <div class="form-group">
                    <label for="">Cambie el enlace</label>
                    <input class="form-control" type="text" name="url" placeholder="Enlace">
                </div>
                <div class="form-group">
                    <label for="">Elija la categoria de su contenido</label>
                    <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect" style="width: 100%;">
                        <option value="Chistes">Chistes</option>
                        <option value="Deportes">Deportes</option>
                        <option value="Mujeres">Mujeres</option>
                    </select>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Cambiar</button>
                </div>
            </form>
            <a href="/">Cancelar</a>
        </div>
      
    </div>
</div>




<% include ../partials/footer %>