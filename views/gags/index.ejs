<!DOCTYPE html>
<html>
    <head>
        <Title> Meland - Donde los meme viven </Title>

<% include ../partials/header %>

<div class="container">
  <% Gags.forEach(function(gag){ %>
  <div class="row">
    <div class="card">
      <div class="head-title">
        <h3 class="gag-title"><%= gag["title"] %></h3>
      </div>
      <div class="content-img">
        <a href="/gags/<%= gag['_id'] %>">
          <img id="meme-content" src="<%= gag['image'] %>">
        </a>
      </div>
      <div class="meta">
        <div class="meta-info">
          <p class="left-floated"><%= gag["views"] %> Vistas</p>
          -
          <p class="left-floated"><%= gag["commentsNumber"] %> Comentarios</p>
        </div>
      </div>
      <div class="cta">
        <div class="left-floated">
          <div class="upvote btn btn-default">
            <span class="glyphicon glyphicon-arrow-up">
          </div>
          <div class="downvote btn btn-default">
            <span class="glyphicon glyphicon-arrow-down">
          </div>
          <a href="/gags/<%= gag['_id'] %>#comentarios" class="comment btn btn-default">
            <i class="fa fa-commenting" aria-hidden="true"></i>
          </a>
        </div>
      </div>
      <hr>  
    </div>
  </div>
  <% }) %>
  
</div>
      
   
</div>

<% include ../partials/footer %>