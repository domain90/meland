<!DOCTYPE html>
<html>
    <head>
        <Title> Menacion - Donde los meme viven </Title>

<% include ../partials/header %>

<div class="container">
  <% Gags.forEach(function(gag){ %>
  <article data-id="<%= gag["id"] %>">
    <div class="row">
      <div class="card">
        <div class="head-title">
          <h3 class="gag-title"><%= gag["title"] %></h3>
        </div>
        <div class="content-img">
          <a href="/gags/<%= gag['_id'] %>">
            <img id="meme-content" src="<%= gag['image'] %>">
          </a>
        </div>
        <div class="meta">
          <div class="meta-info">
            <p class="left-floated"><%= gag["views"] %> Vistas</p>
            -
            <p  id="gag-votes" class="left-floated"><span id="votes"><%= gag["votes"] %></span> Votos</p>
            -
            <p class="left-floated"><%= gag["commentsNumber"] %> Comentarios</p>
          </div>
        </div>
        <div class="cta">
          <div class="left-floated">
             <div class="votes">
              <div class="btn-vote btn btn-default btn-upvote">
                  <span class="glyphicon glyphicon-arrow-up">
              </div>
              <div class="btn-vote btn btn-default btn-downvote">
                <span class="glyphicon glyphicon-arrow-down">
              </div>
            </div>
            <a href="/gags/<%= gag['_id'] %>#comentarios" class="comment btn btn-default">
              <i class="fa fa-commenting" aria-hidden="true"></i>
            </a>
          </div>
        </div>
        <hr>  
      </div>
    </div>
  </article>
  <% }) %>
  
</div>
      
   
</div>

<% include ../partials/footer %>